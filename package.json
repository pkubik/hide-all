{
  "name": "hide-all",
  "displayName": "Hide All",
  "description": "Hide all panels and sidebars",
  "repository": {
    "url": "https://github.com/pkubik/hide-all"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hide-all.hideAll"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Auto Hide configuration",
      "properties": {
        "hide-all.hideSideBar": {
          "type": "boolean",
          "default": true,
          "description": "Hide side bar on command."
        },
        "hide-all.hidePanel": {
          "type": "boolean",
          "default": true,
          "description": "Hide panel on command."
        },
        "hide-all.hideAuxSideBar": {
          "type": "boolean",
          "default": true,
          "description": "Hide auxiliary panel on command."
        }
      }
    },
    "commands": [
      {
        "command": "hide-all.hideAll",
        "title": "Hide All"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}